<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:project_chess_DB.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="project_chess_DB.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/black-knight-chess-icon-vector-600nw-2468279913.webp"
        Title="project_chess_DB"
        Background="#524C42"
        ExtendClientAreaToDecorationsHint="True">

        <SplitView IsPaneOpen="{Binding IsPaneOpen}"
                   OpenPaneLength="300"
                   CompactPaneLength="48"
                   DisplayMode="CompactInline"
                   PaneBackground="#524C42" >
                <SplitView.Pane>
                        <StackPanel Spacing="5"
                                    Margin="5">
                                <Button Command="{Binding TriggerPaneCommand}">
                                        <PathIcon Data="{StaticResource line_horizontal_3_regular}"></PathIcon>
                                </Button>
                                <ListBox ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedListItem}">
                                        <ListBox.ItemTemplate>
                                                <DataTemplate DataType="{x:Type vm:ListItemTemplate}">
                                                        <StackPanel Spacing="15" Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Label}"></TextBlock>
                                                        </StackPanel>
                                                </DataTemplate>
                                        </ListBox.ItemTemplate>
                                </ListBox>
                        </StackPanel>
                </SplitView.Pane>
                <SplitView.Content>
                        <Border CornerRadius="12 0 0 0"
                                Background="#2d2d2d">
                                <TransitioningContentControl Content="{Binding CurrentPage}"/>
                        </Border>
                </SplitView.Content>
        </SplitView>
</Window>
