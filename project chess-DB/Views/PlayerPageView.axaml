<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:project_chess_DB.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:project_chess_DB.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="project_chess_DB.Views.PlayerPageView"
             x:DataType="vm:PlayerPageViewModel">

    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,30,100,10">
            <TextBlock Grid.Column="0" Text="Players" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            
            <Grid ColumnDefinitions="Auto, *">
                
                <StackPanel Grid.Column="0"
                            Margin="20,0,20,50" 
                            Spacing="20"
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"> 

                    <Border Width="250" HorizontalAlignment="Center" Background="#524C42" CornerRadius="5" Padding="10">
                        <StackPanel Spacing="10">
                            <TextBlock Text="New player Details" FontWeight="Bold" Foreground="White"/>
                            <TextBox x:Name="TxtLastname" Watermark="Last name" Text="{Binding NewLast_name}"/>
                            <TextBox x:Name="TxtFirstname" Watermark="First name" Text="{Binding NewFirst_name}"/>
                            <TextBox x:Name="TxtAge" Watermark="Age" Text="{Binding NewAge}"  />
                            <TextBox x:Name="TxtElo" Watermark="Elo" Text="{Binding NewElo}" />
                            <TextBox Watermark="Mail" Text="{Binding NewMail}"/>
                            <TextBox x:Name="TxtPhonenumber" Watermark="Phone number" Text="{Binding NewPhone_number}"/>
                            <TextBox x:Name="TxtCountry" Watermark="Country" Text="{Binding NewCountry}"/>
                        </StackPanel>
                    </Border>
                    
                    <Button HorizontalAlignment="Center" Background="#524C42" Command="{Binding AddPlayerCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                            <PathIcon Data="{StaticResource add_icon}" Width="15" Height="15" Foreground="White"/>
                            <TextBlock Text="Add a player" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Grid Grid.Column="1" RowDefinitions="Auto, *">

                    <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Width="300" HorizontalAlignment="Center" Margin="0,0,150,10">
                        <TextBox Grid.Column="0" Watermark="Search a player..." x:Name="txtSearch" Text="{Binding SearchText}" Height="30" CornerRadius="5 0 0 5" Background="#524C42" Foreground="White"/>
                        <Button Grid.Column="1" Height="30" CornerRadius="0 5 5 0" Background="#524C42">
                            <PathIcon Data="{StaticResource search_icon}" Width="15" Height="15" Foreground="White"/>
                        </Button>
                    </Grid>

                    <Border Grid.Row="1" Margin="0,0,30,30" CornerRadius="10" BorderThickness="1" BorderBrush="Gray">
                        <DataGrid x:CompileBindings="False" 
                                MaxHeight="700"                
                                VerticalAlignment="Top"
                                Margin="0" 
                                ItemsSource="{Binding Players}" 
                                GridLinesVisibility="All"
                                VerticalScrollBarVisibility="Visible"   
                                CellEditEnded="DataGrid_CellEditEnded"
                                PreparingCellForEdit="DataGrid_PreparingCellForEdit"
                                >
                            <DataGrid.Styles>
                                <Style Selector="DataGridColumnHeader">
                                <Setter Property="Background" Value="#524C42"/> <Setter Property="Foreground" Value="White"/>   <Setter Property="FontWeight" Value="Bold"/>    </Style>
                            </DataGrid.Styles>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Matricule"  Binding="{Binding Matricule}" Width="*"/>
                                <DataGridTextColumn Header="Last Name"  Binding="{Binding Last_name}" Width="*"/>
                                <DataGridTextColumn Header="First Name" Binding="{Binding First_name}" Width="*"/>
                                <DataGridTextColumn Header="Age"        Binding="{Binding Age}" Width="*"/>
                                <DataGridTextColumn Header="Elo"        Binding="{Binding Elo}" Width="*"/>
                                <DataGridTextColumn Header="Country"    Binding="{Binding Country}" Width="*"/>
                                <DataGridTextColumn Header="Mail"       Binding="{Binding Mail}" Width="*"/>
                                <DataGridTextColumn Header="Phone"      Binding="{Binding Phone_number}" Width="*"/>
                                <DataGridTemplateColumn Header="Actions">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Margin="5,0">    
                                                        <Button Width="30" Height="30" CornerRadius="5" Padding="0" Background="#B71C1C"
                                                            Command="{Binding $parent[UserControl].DataContext.DeletePlayerCommand}"
                                                            CommandParameter="{Binding}">
                                                            <PathIcon Data="{StaticResource delete_forever_regular}" Width="14" Height="14" Foreground="White"/>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>