<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="project_chess_DB.Views.PlayerPageView">

    <Grid RowDefinitions="Auto, *">
        <Grid ColumnDefinitions="*,*">
            <Button Grid.Column="0" VerticalAlignment="Bottom" Margin="20,550,30,10" Background="#524C42">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <PathIcon Data="{StaticResource add_icon}" Width="15" Height="15" Foreground="White"/>
                    <TextBlock Text="Add a new player" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <TextBlock Text="Members" HorizontalAlignment="Left" Grid.Column="1" Grid.ColumnSpan="2" FontSize="25" FontWeight="SemiBold" Margin="0,30,30,10"/>
        </Grid>
        <StackPanel Grid.Row="0" HorizontalAlignment="Right" Margin="0,30,30,10" >
            <Grid ColumnDefinitions="*, Auto" Width="200" >
                
                <TextBox Grid.Column="0" 
                         Watermark="Search player name..." 
                         x:Name="txtSearch" 
                         Height="30"
                         CornerRadius="5 0 0 5"
                         Background="#524C42"/>

                <Button Grid.Column="1" 
                        Height="30"
                        CornerRadius="0 5 5 0"
                        Background="#524C42">
                    <PathIcon Data="{StaticResource search_icon}" 
                              Width="15" 
                              Height="15" 
                              Foreground="White"
                              />
                </Button>
            </Grid>
        </StackPanel>

        
    </Grid>
    
</UserControl>