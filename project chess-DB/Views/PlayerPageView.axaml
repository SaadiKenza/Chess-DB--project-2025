<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:project_chess_DB.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="project_chess_DB.Views.PlayerPageView">

    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,30,100,10">
            <TextBlock Grid.Column="0" Text="Players" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            
            <Grid ColumnDefinitions="Auto, *">
                
                <StackPanel Grid.Column="0"
                            Margin="20,0,20,50" 
                            Spacing="20"
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"> 

                    <Border Width="250" HorizontalAlignment="Center" Background="#524C42" CornerRadius="5" Padding="10">
                        <StackPanel Spacing="10">
                            <TextBlock Text="New player Details" FontWeight="Bold" Foreground="White"/>
                            <TextBox Watermark="Last name"/>
                            <TextBox Watermark="First name"/>
                            <TextBox Watermark="Age"/>
                            <TextBox Watermark="Mail"/>
                            <TextBox Watermark="Phone number"/>
                            <TextBox Watermark="Country"/>
                        </StackPanel>
                    </Border>
                    
                    <Button HorizontalAlignment="Center" Background="#524C42">
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                            <PathIcon Data="{StaticResource add_icon}" Width="15" Height="15" Foreground="White"/>
                            <TextBlock Text="Add a player" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Grid Grid.Column="1" RowDefinitions="Auto, *">

                    <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Width="300" HorizontalAlignment="Center" Margin="0,0,150,10">
                        <TextBox Grid.Column="0" Watermark="Search a player..." x:Name="txtSearch" Height="30" CornerRadius="5 0 0 5" Background="#524C42" Foreground="White"/>
                        <Button Grid.Column="1" Height="30" CornerRadius="0 5 5 0" Background="#524C42">
                            <PathIcon Data="{StaticResource search_icon}" Width="15" Height="15" Foreground="White"/>
                        </Button>
                    </Grid>

                    <Border Grid.Row="1" Margin="0,0,30,30" CornerRadius="10" BorderThickness="1" BorderBrush="Gray">
                        <DataGrid x:CompileBindings="False" 
                                Height="400" 
                                VerticalAlignment="Top"
                                Margin="0" 
                                ItemsSource="{Binding Players}" 
                                GridLinesVisibility="All"
                                >
                            <DataGrid.Styles>
                                <Style Selector="DataGridColumnHeader">
                                <Setter Property="Background" Value="#524C42"/> <Setter Property="Foreground" Value="White"/>   <Setter Property="FontWeight" Value="Bold"/>    </Style>
                            </DataGrid.Styles>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Last Name"  Binding="{Binding Last_name}"/>
                                <DataGridTextColumn Header="First Name" Binding="{Binding First_name}" />
                                <DataGridTextColumn Header="Country"    Binding="{Binding Country}" />
                                <DataGridTextColumn Header="Mail"       Binding="{Binding Mail}" />
                                <DataGridTextColumn Header="Age"        Binding="{Binding Age}" />
                                <DataGridTextColumn Header="Phone"      Binding="{Binding Phone_number}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>