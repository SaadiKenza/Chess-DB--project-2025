<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="project_chess_DB.Views.CompetitionPageView">
             
    <Grid RowDefinitions="Auto, *">
        <Grid ColumnDefinitions="*,*">
            <Button Grid.Column="0">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <PathIcon Data="{StaticResource add_icon}" Width="15" Height="15" Foreground="White"/>
                    <TextBlock Text="Add a new competition" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
        <StackPanel Grid.Row="0" HorizontalAlignment="Right" Margin="0,30,30,10">
            <Grid ColumnDefinitions="*, Auto" Width="300" >
                
                <TextBox Grid.Column="0" 
                         Watermark="Search the competition..." 
                         x:Name="txtSearch" 
                         Height="30"
                         CornerRadius="5 0 0 5"/>

                <Button Grid.Column="1" 
                        Height="30"
                        CornerRadius="0 5 5 0">
                    <PathIcon Data="{StaticResource search_icon}" 
                              Width="15" 
                              Height="15" 
                              Foreground="White"/>
                </Button>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="1">
        </Grid>
        
    </Grid>
    
</UserControl>