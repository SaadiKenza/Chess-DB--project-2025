<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="project_chess_DB.Views.TournamentPageView">

    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,30,30,20">
            <TextBlock Grid.Column="0" Text="Tournament" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <Grid Grid.Column="1" ColumnDefinitions="*, Auto" Width="300">
                <TextBox Grid.Column="0" Watermark="Search the tournament..." x:Name="txtSearch" Height="30" CornerRadius="5 0 0 5" Background="#524C42" Foreground="White"/>
                <Button Grid.Column="1" Height="30" CornerRadius="0 5 5 0" Background="#524C42">
                    <PathIcon Data="{StaticResource search_icon}" Width="15" Height="15" Foreground="White"/>
                </Button>
            </Grid>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            
            <Grid ColumnDefinitions="500, *">
                
                <StackPanel Grid.Column="0" Margin="20,0,20,50" Spacing="10" VerticalAlignment="Top">

                    <Border Width="250" Background="#524C42" CornerRadius="5" Padding="10">
                        <StackPanel Spacing="10">
                            <TextBlock Text="New Tournament Details" FontWeight="Bold"/>
                            <TextBox Watermark="Name of the tournament"/>
                            <TextBox Watermark="Country"/>
                            <TextBox Watermark="City"/>
                            <TextBox Watermark="Start date"/>
                            <TextBox Watermark="End date"/>
                        </StackPanel>
                    </Border>

                    <Button HorizontalAlignment="Center" Background="#524C42" Margin="40,0,20,80">
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                            <PathIcon Data="{StaticResource add_icon}" Width="15" Height="15" Foreground="White"/>
                            <TextBlock Text="Add Tournament" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>

                    <Border Width="500" HorizontalAlignment="Left" Background="#524C42" CornerRadius="5" Padding="10">
                        <StackPanel Spacing="15">
                            <TextBlock Text="Competition Details" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" FontSize="16"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Spacing="5">
                                    <TextBlock Text="Player 1" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBox Watermark="Registration number"/>
                                    <TextBox Watermark="Competition number"/>
                                    <TextBox Watermark="Winner/Loser"/>
                                    <TextBox Watermark="moves"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="5">
                                    <TextBlock Text="Player 2" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBox Watermark="Registration number"/>
                                    <TextBox Watermark="Competition number"/>
                                    <TextBox Watermark="Winner/Loser"/>
                                    <TextBox Watermark="moves"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Button HorizontalAlignment="Left" Background="#524C42" Margin="140,0,20,20">
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                            <PathIcon Data="{StaticResource add_icon}" Width="15" Height="15" Foreground="White"/>
                            <TextBlock Text="Add Competition info" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Border Grid.Column="1" Margin="0,0,30,30" CornerRadius="10"/>
                
            </Grid>
        </ScrollViewer>
        
    </Grid>
</UserControl>